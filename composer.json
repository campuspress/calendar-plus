{
    "name": "campuspress/calendar-plus",
    "description": "Calendar+ WordPress Plugin",
    "type": "wordpress-plugin",
    "license": "GPL",
    "authors": [
        {
            "name": "CampusPress",
            "email": "support@edublogs.org"
        }
    ],
    "require": {
        "ext-calendar": "*",
        "composer/installers": "~1.0",
        "johngrogg/ics-parser": "^3",
        "mexitek/phpcolors": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "wp-coding-standards/wpcs": "^1.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0"
    },
    "autoload": {
        "classmap": ["admin", "includes", "modules", "public"]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
