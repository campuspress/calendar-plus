{
    "name": "campuspress/calendar-plus",
    "description": "Calendar+ WordPress Plugin",
    "type": "wordpress-plugin",
    "license": "GPL",
    "authors": [
        {
            "name": "CampusPress",
            "email": "support@edublogs.org"
        }
    ],
    "require": {
        "ext-calendar": "*",
        "composer/installers": "~1.0",
        "johngrogg/ics-parser": "^3.2",
        "mexitek/phpcolors": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "wp-coding-standards/wpcs": "^1.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^1"
    },
    "autoload": {
        "classmap": ["admin", "includes", "modules", "public"],
        "exclude-from-classmap": ["/includes/plugin-update-checker/"]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
